{
  "rewrites": [
    { "source": "/api/dialogflow", "destination": "/api/dialogflow" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "RESEND_API_KEY": "@resend_api_key"
  }
}